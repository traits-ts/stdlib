{
    "root": false,
    "formatter": {
        "enabled": false
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "noNonNullAssertion": "off",
                "useImportType": "off",
                "noParameterAssign": "off",
                "noUselessElse": "off",
                "useExponentiationOperator": "off",
                "useTemplate": "off"
            },
            "complexity": {
                "noStaticOnlyClass": "off",
                "noForEach": "off",
                "noBannedTypes": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noAssignInExpressions": "off"
            },
            "correctness": {
                "useValidTypeof": "off",
                "noUnusedFunctionParameters": "off",
                "noUnusedVariables": "off"
            }
        }
    }
}

